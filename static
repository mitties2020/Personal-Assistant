<body>

<h2>ED Clinical Assistant</h2>
<textarea id="q" placeholder="Ask a clinical question..."></textarea>
<button onclick="ask()">Submit</button>

<div id="answer"></div>

<script>
async function ask() {
  let q = document.getElementById("q").value;
  let res = await fetch("/answer", {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({ question: q })
  });
  let data = await res.json();
  document.getElementById("answer").innerText = data.answer || data.error;
}
</script>

</body>
